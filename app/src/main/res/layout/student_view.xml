<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@drawable/field_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Name: "
            android:textSize="16sp"
            android:textColor="@color/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stu_name"
            android:text="Abhsihek Mane"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:text="Roll No: "
           android:textSize="16sp"
           android:textColor="@color/b"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <TextView
           android:id="@+id/stu_roll"
           android:text="3108"
           android:textSize="16sp"
           android:paddingLeft="5dp"
           android:textStyle="bold"
           android:textColor="@color/b"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Enrollment No. "
            android:textSize="16sp"
            android:textColor="@color/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stu_enrollment"
            android:text="1705390010"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>