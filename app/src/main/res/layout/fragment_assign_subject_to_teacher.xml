<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Fragment.AssignSubjectToTeacher">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layoutHead"
            android:background="#0277BD"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layoutHeadSize">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/user"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <TextView
                android:text="@string/assign_subject"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_view"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:animateLayoutChanges="true"
            android:overScrollMode="always"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/layoutSelectSubject"
            android:padding="10dp"
            android:layout_below="@id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/layoutHeadSize">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_1"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/eng"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:text="@string/eng"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/bsc"
                                android:text="@string/bsc"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/ict"
                                android:text="@string/ict"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/bms"
                                android:text="@string/bms"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/ege"
                                android:text="@string/ege"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/wpc"
                                android:text="@string/wpc"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_2"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/eec"
                                android:textColor="@color/b"
                                android:text="@string/eec"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/ami"
                                android:text="@string/ami"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/bec"
                                android:text="@string/bec"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/pci"
                                android:text="@string/pci"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/bcc"
                                android:checkable="true"
                                android:text="@string/bcc"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/cph"
                                android:text="@string/cph"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/wpd"
                                android:text="@string/wpd"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_3"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/oop"
                                android:textColor="@color/b"
                                android:text="@string/oop"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/dsu"
                                android:text="@string/dsu"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/cgr"
                                android:text="@string/cgr"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/dms"
                                android:text="@string/dms"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/dte"
                                android:text="@string/dte"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_4"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/jpr"
                                android:textColor="@color/b"
                                android:text="@string/jpr"
                                android:layout_width="wrap_content"
                                android:checkable="true"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/sen"
                                android:text="@string/sen"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/dcc"
                                android:text="@string/dcc"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/mic"
                                android:text="@string/mic"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/gad"
                                android:text="@string/gad"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_5"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/est"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:text="@string/est"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/osy"
                                android:checkable="true"
                                android:text="@string/osy"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/ajp"
                                android:text="@string/ajp"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/ste"
                                android:text="@string/ste"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:checkable="true"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/css"
                                android:text="@string/css"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/acn"
                                android:text="@string/acn"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/adm"
                                android:checkable="true"
                                android:text="@string/adm"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/itr"
                                android:checkable="true"
                                android:text="@string/itr"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/cpp"
                                android:text="@string/cpp"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.textview.MaterialTextView
                            android:text="@string/semester_6"
                            android:textColor="@color/b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/mgt"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:text="@string/mgt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/pwp"
                                android:text="@string/pwp"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/mad"
                                android:text="@string/mad"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/eti"
                                android:text="@string/eti"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/wbp"
                                android:text="@string/wbp"
                                android:checkable="true"
                                android:textColor="@color/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/nis"
                                android:text="@string/nis"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/dmw"
                                android:text="@string/dmw"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/ede"
                                android:text="@string/ede"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/cpe"
                                android:text="@string/cpe"
                                android:textColor="@color/b"
                                android:checkable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/assign_subject_btn"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="5dp"
                app:backgroundTint="@color/fr"
                android:layout_height="wrap_content"
                android:text="@string/add"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/abpb"
            android:visibility="invisible"
            android:layout_marginTop="390dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>